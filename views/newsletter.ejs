<%- include("partials/headerNewsletter"); %>
<%- include("partials/navbar"); %>
<!-- ------------------------------------------------------------------------------------------------------------------------------ -->
<div class="col" id="MasterContainer">
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
    <div class=" carousel slide" id="enchilada" data-ride="carousel">
      <div class="carousel-inner">
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
        <% for (var i = 0; i < 3; i++) { %>
          <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <div class="container oracleInspiration">
              <img src="<%= news[i].Image %>" class="carouselImage" alt="">
              <div class="container carouselTextBox rounded">
                <h2><%= news[i].Title %></h2>
                <p><%= news[i].Text %></p>
                <a href="<%= news[i].URL %>">
                  Read the article here
                </a>
                <h1 class="logo">Salud y Bienestar</h1>
              </div>
            </div>
          </div>
        <% } %>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#enchilada" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#enchilada" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
  
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col col-md-6  rounded" id="contenedorNoticias">
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->      
      <div class="container-fluid rounded bg-light" id="newsTitle">
        <h2>Aqui van las noticias del dia</h2>
      </div>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
      <div class="container" id="newsSections">
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
        <% for (var i = (news.length - 1); i >= 0; i--) { %>
        <div class="container">
          <div class="row rounded noticia  bg-light">
            <div class="col col-4">
              <img class="img-fluid flat-start" src="<%= news[i].Image %>" alt="">
            </div>
            <div class="col col-8">
              <div class="container" id="">
                <h3><%=news[i].Title%></h3>
                <p><%=news[i].Text%></p>
                <span id="basura"><a href="<%=news[i].URL%>">Read more</a></span>
              </div>
            </div>        
          </div>
        </div>
        <% } %>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
      </div>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
    </div>
  </div> 
</div>     
  
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
  </div>
<%- include("partials/footer"); %>