<%- include("partials/upperHeader"); %>
<link rel="stylesheet" href="./css/newsletter.css" type="text/css">
<%- include("partials/lowerHeader"); %>
<body id="bodyDecorative">
  <div class="container-fluid" id="carouselDecorative"></div>
<%- include("partials/navbar"); %>
<!-- ------------------------------------------------------------------------------------------------------------------------------ -->
<!-- ------------------------------------------------------------------------------------------------------------------------------ -->
<div class="col" id="MasterContainer">
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
    <div class=" carousel slide" id="enchilada" data-ride="carousel">
      <div class="carousel-inner">
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
      <% for (var i = 0; i < 3; i++) { %>      
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <div class="container oracleInspiration">
            <div>
              <img src="<%= news[i].Image %>" class="carouselImage" alt="">
            </div>
            <div class="container carouselTextBox rounded">
              <div class="col">
                <div class="row">
                  <h2><%= news[i].Title %></h2>
                </div>
                <div class="row">
                  <p><%= news[i].Text %></p>                
                </div>
                <div class="row">
                  <a href="<%= news[i].URL %>" target="_blank" >
                    Read the article here 
                </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#enchilada" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#enchilada" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
  
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
  <div class="container">
    <div class="row justify-content-center">
      <div class="col col-12 col-lg-8">
        <div class="container rounded" id="contenedorNoticias">
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->      
          <div class="container">
            <div class="row rounded bg-light">
              <div class="col ">
                <h2>Aqui van las noticias del dia</h2>
              </div>
            </div>
          </div>
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
          <% for (var i = (news.length - 1); i >= 0; i--) { %>
            <div class="container">
              <div class="row rounded noticia bg-light">
                <div class="col col-6 col-lg-4 col-sm-6 align-self-center">
                  <img class="img-fluid flat-start" src="<%= news[i].Image %>" alt="">
                </div>
                <div class="col col-6 col-lg-8 col-md-6">
                  <div class="container">
                    <div class="col">
                      <div class="row">
                        <h3><%=news[i].Title%></h3>
                      </div>
                      <div class="row nonCellphoneCompatible">
                        <p><%=news[i].ShortDescription%></p>
                      </div>
                      <div class="row">
                        <div class="col col-md-4 offset-md-8">
                          <span><a href="<%=news[i].URL%>" target="_blank">Read more</a></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>        
              </div>
            </div> 
            <% } %>        
    
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
        </div>
      </div>
    </div>      
  </div>
  
  <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
  </div>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Admin News Manager
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Post news as admin</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="container">
              <div class="row">
                  <div class="col-10">
                      <h5>Username</h5>
                  </div>
              </div>
              <br/>
              <div class="row">
                  <div class="col-12">
                      <div class="mb-3">
                          <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title">
                      </div>
                      <div class="mb-3">
                          <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Brief summary (up to 200 characters)" rows="4" maxlength="200"></textarea>
                      </div>
                      <div class="mb-3">
                        <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Catching Description (50 characters or less)" rows="4" maxlength="50"></textarea>
                    </div>
                      <div class="mb-3">
                        <input type="url" class="form-control" id="exampleFormControlInput1" placeholder="URL">
                    </div>
                      <div class="mb-3">
                          <label for="formFile" class="form-label">Upload a picture</label>
                          <input class="form-control" type="file" id="formFile" placeholder="Upload image">
                        </div>
                  </div>
              </div>
          </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Upload</button>
        </div>
      </div>
    </div>
  </div>
<%- include("partials/footer"); %>